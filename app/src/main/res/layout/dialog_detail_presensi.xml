<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Presensi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Foto Selfie -->
        <ImageView
            android:id="@+id/iv_detail_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_detail_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Petugas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_detail_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu: -"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi:"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/tv_detail_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lat, Long"
            android:layout_marginBottom="4dp"/>
            
        <TextView
            android:id="@+id/tv_detail_lokasi_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan Lokasi..."
            android:textStyle="italic"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_detail_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutup"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
